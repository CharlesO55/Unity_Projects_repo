.cards_template{
	height: 90%;
	align-self: center;
}

/*Portrait*/
#PortraitBG{
	--unity-image: url("/Assets/Resources/Sprites/Portrait/PortraitBG.png");
}
#PortraitFrame{
	--unity-image: url("/Assets/Resources/Sprites/Portrait/PortraitFrame.png");
}
#PortraitImage{
	--unity-image: url("/Assets/Resources/Sprites/Portrait/PortraitImage.png");
	position: absolute;
	left: 40%;
}
#PortraitFiller{
	--unity-image: url("/Assets/Resources/Sprites/Portrait/PortraitBG.png");
	margin-right: -20%; 
	margin-left: -20%;
	visibility: hidden;
}